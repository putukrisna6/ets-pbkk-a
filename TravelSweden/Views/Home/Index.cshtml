    ViewData["Title"] = "Home Page";
}

<section class="container">
    <div class="row justify-content-around">
        <div class="col-lg-4" style="background-color:#FFB703; height:160px; width: 30%; max-width: 300px; border-radius:15px"></div>
        <div class="col-lg-4" style="background-color:#FFB703; height:160px; width: 30%; max-width: 300px; border-radius:15px"></div>
        <div class="col-lg-4" style="background-color:#FFB703; height:160px; width: 30%; max-width: 300px; border-radius:15px"></div>
    </div>

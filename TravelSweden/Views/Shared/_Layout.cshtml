<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - TravelSweden</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/TravelSweden.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/style.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand font-weight-bold" asp-area="" asp-controller="Home" asp-action="Index"><img src="img/icon.png" alt="icon" width="150" style="vertical-align:middle;margin:10px 0px; margin-left: 10px;"/></a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <div class="d-flex flex-row">
                            <img src="img/unknown.png" alt="pesawat" width="20" height="20" style="vertical-align:middle;margin:10px 0px; margin-left: 10px;"/>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Tiket Pesawat</a>
                            </li>
                        </div>
                        <div class="d-flex flex-row">
                            <img src="img/unknown (1).png" alt="hotel" width="20" height="20" style="vertical-align:middle;margin:10px 0px; margin-left: 10px;" />
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">Hotel</a>
                            </li>
                        </div>
                        <div class="d-flex flex-row">
                            <img src="img/kereta.png" alt="kereta" width="20" height="20" style="vertical-align:middle;margin:10px 0px; margin-left: 10px;"/>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">Tiket Kereta</a>
                            </li>
                        </div>
                    </ul>
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="d-flex flex-row"></div>    
            <div class="d-sm-inline-flex flex-column p-2">
                <img src="img/icon.png" width="120" style="margin-left:5px" />
                <div class="d-sm-inline-flex flex-row p-0.5" style="padding:2px 12px;">
                    <img src="img/phone.png" width="auto" height="18" style="margin:20px 10px;"/>
                        <p class="" style="font-size:12px; vertical-alignment: middle; ">(021) 77777777</p>               
                </div>
                <div class="d-sm-inline-flex flex-row p-0.5" style="padding:0px 12px; margin-top:-30px">
                    <img src="img/email.png" width="auto" height="18" style="margin:20px 10px;"/>
                        <p class="" style="font-size:12px; vertical-alignment: middle; ">cs@travely.com</p>               
                </div>
                <div class="d-sm-inline-flex flex-row p-0.5" style="padding:0px 12px; margin-top:-30px">
                    <img src="img/alamt.png" width="auto" height="18" style="margin:20px 10px;"/>
                        <p class="" style="font-size:12px; vertical-alignment: middle; ">Jl. Mawar Indah 123, Jakarta Selatan</p>               
                </div>
            </div>

            <div class="d-sm-inline-flex flex-row p-0.5" style="padding:2px 40px;">
                <div class="d-flex flex-column" style="">
                    <p style="font-size:14px;">Unduh TravelSweden melalui</p>
                    <img src="img/download.png" width="150" height="auto" style="margin-top : -30px;"/>
                </div>               
            </div>
        </div>
        <div class="container-fluid" style="background-color: #126782;color:black;text-align:center;">
            TravelSweden © 2022 Travel World Net GmbH. All Rights Reserved
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
